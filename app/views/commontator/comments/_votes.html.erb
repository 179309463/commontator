<% # Clients of this partial must provide the following variable:
   # comment
%>

<% can_vote = comment.can_be_voted_on_by?(@commontator) %>
<% vote = comment.votes.find_by_voter_id_and_voter_type(@commontator.id, @commontator.class.name) %>

<span id="comment_<%= comment.id %>_upvote_span" class="comment_upvote">
  <% if !can_vote || (!vote.blank? && vote.vote_flag) %>
    <%= form_tag unvote_comment_path(comment),
          :method => :put,
          :remote => true do %>
      <%= image_submit_tag "commontator/thumbs_up_hover.png",
            :onmouseover => "this.src='/assets/commontator/thumbs_up.png'",
            :onmouseout => "this.src='/assets/commontator/thumbs_up_hover.png'" %>
      <%= label_tag comment.upvotes.size %>
    <% end %>
  <% elsif can_vote %>
    <%= form_tag upvote_comment_path(comment),
          :method => :put,
          :remote => true do %>
      <%= image_submit_tag "commontator/thumbs_up.png",
            :onmouseover => "this.src='/assets/commontator/thumbs_up_hover.png'",
            :onmouseout => "this.src='/assets/commontator/thumbs_up.png'" %>
      <%= label_tag comment.upvotes.size %>
    <% end %>
  <% else %>
    <%= image_tag "commontator/thumbs_up_hover.png" %>
  <% end %>
</span>

<span id="comment_<%= comment.id %>_downvote_span" class="comment_downvote">
  <% if !can_vote || (!vote.blank? && !vote.vote_flag) %>
    <%= form_tag unvote_comment_path(comment),
          :method => :put,
          :remote => true do %>
      <%= image_submit_tag "commontator/thumbs_down_hover.png",
            :onmouseover => "this.src='/assets/commontator/thumbs_down.png'",
            :onmouseout => "this.src='/assets/commontator/thumbs_down_hover.png'" %>
      <%= label_tag comment.downvotes.size %>
    <% end %>
  <% elsif can_vote %>
    <%= form_tag downvote_comment_path(comment),
          :method => :put,
          :remote => true do %>
      <%= image_submit_tag "commontator/thumbs_down.png",
            :onmouseover => "this.src='/assets/commontator/thumbs_down_hover.png'",
            :onmouseout => "this.src='/assets/commontator/thumbs_down.png'" %>
      <%= label_tag comment.downvotes.size %>
    <% end %>
  <% else %>
    <%= image_tag "commontator/thumbs_down_hover.png" %>
  <% end %>
</span>
