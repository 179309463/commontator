<% # Clients of this partial must provide the following variable:
   # comment
%>

<% if comment.is_deleted? %>
  <%= comment.thread.config.comment_name.capitalize %> has been deleted by <%= deleter_name(comment) %>
<% else %>
  <%= simple_format comment.body, {:id => "comment_#{comment.id}_body", :class => 'comment_body'} %>
<% end %>
